{
  "name": "@ocode/components",
  "version": "1.0.0",
  "description": "OC UI Components",
  "main": "index.js",
  "private": true,
  "repository": "git@github.com:observable-code/components.git",
  "author": "Chris Biscardi <chris@christopherbiscardi.com>",
  "license": "MIT",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "changelog": "lerna-changelog",
    "plop": "plop",
    "postinstall": "npm run bootstrap",
    "precommit": "lint-staged",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "test": "lerna run test",
    "test:updated": "npm run test -- $(lerna updated | grep ^- | grep -v private | sed 's/^- /--scope /g')"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "changelog": {
    "repo": "observable-code/components",
    "labels": {
      "bug": "Bug fix",
      "cleanup": "Housekeeping"
    },
    "cacheDir": ".changelog"
  },
  "dependencies": {
    "@storybook/react": "^3.1.7",
    "babel-cli": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "css-loader": "^0.28.4",
    "emotion": "^1.0.6",
    "fam": "^0.0.3",
    "glam": "^4.0.4",
    "husky": "^0.13.4",
    "lerna": "^2.0.0-rc.5",
    "lerna-changelog": "^0.5.0",
    "lerna-semantic-release": "^9.1.0",
    "lint-staged": "^3.6.1",
    "plop": "^1.8.0",
    "preact": "^8.1.0",
    "preact-compat": "^3.16.0",
    "prettier": "^1.5.2",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "storybook-addon-a11y": "^3.0.0",
    "style-loader": "^0.18.2",
    "system-font-css": "^1.1.0"
  },
  "devDependencies": {
    "cz-lerna-changelog": "^1.2.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  }
}
